<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.ChildProfileItem"
             Title="{Binding Model.ChildDetails.GivenName}">
    <StackLayout>
        <Button Text="Edit basic info" Command="{Binding EditChildDetailsCommand}"/>
        <Button Text="Edit physical details" Command="{Binding EditPhysicalDetailsCommand}"/>
        <Button Text="Edit family" Command="{Binding EditFamilyCommand}"/>
        <Button Text="Edit friends" Command="{Binding EditFriendsCommand}"/>
        <Button Text="Edit care providers" Command="{Binding EditCareProvidersCommand}"/>
        <Button Text="Edit documents" Command="{Binding EditDocumentsCommand}"/>
        <Button Text="Edit photos" Command="{Binding EditPhotosCommand}"/>
    </StackLayout>
</ContentPage>