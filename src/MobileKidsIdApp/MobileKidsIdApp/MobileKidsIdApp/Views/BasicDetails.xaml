<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKidsIdApp.Views.BasicDetails"
             Title="Basic details">
    <TableView BindingContext="{Binding Model}" Intent="Form">
        <TableView.Root>
            <TableSection Title="Name">
                <EntryCell Label="Given" Text="{Binding GivenName}"/>
                <EntryCell Label="Middle" Text="{Binding AdditionalName}"/>
                <EntryCell Label="Family" Text="{Binding FamilyName}"/>
            </TableSection>
            <TableSection Title="Birthday">
                <ViewCell>
                    <DatePicker Date="{Binding Birthday}"/>
                </ViewCell>
            </TableSection>
            <TableSection Title="Contact">
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding ContactId}"/>
                        <Button Text="Change" Command="{Binding ChangeContactCommand}"/>
                    </StackLayout>
                </ViewCell>
            </TableSection>
        </TableView.Root>
    </TableView>
</ContentPage>